<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.dazcorp.android.upcomingdvds"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="DVDApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.co.dazcorp.android.upcomingdvds.DVDListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.co.dazcorp.android.upcomingdvds.DVDDetailActivity"
            android:label="@string/title_dvd_detail"
            android:parentActivityName=".DVDListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DVDListActivity" />
        </activity>

        <service
            android:name="uk.co.dazcorp.android.upcomingdvds.WebService"
            android:exported="false" >
        </service>

        <provider
            android:name="uk.co.dazcorp.android.upcomingdvds.DVDProvider"
            android:authorities="uk.co.dazcorp.android.upcomingdvds.provider"
            android:enabled="false"
            android:exported="false" >
        </provider>
    </application>

</manifest>